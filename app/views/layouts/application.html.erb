      var handler = Gmaps.build('Google');
      handler.buildMap({ provider: {styles: mapStyle}, internal: {id: 'map'}}, function(){

        directionsDisplay.setMap(handler.getMap())
        handler.fitMapToBounds();
      });

    </script>

  </body>
</html>
